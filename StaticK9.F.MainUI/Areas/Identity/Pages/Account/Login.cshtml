@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!-- Page info -->
<div class="page-top-info">
    <div class="container">
        <h4>Sign IN</h4>
        <div class="site-pagination">
            <a href="">Home</a> /
            <a href="">SignIn</a>
        </div>
    </div>
</div>
<!-- Page info end -->

<section class="contact-section">
    <div class="container">

        <div class="row">
            <div class="col-md-4">
                <section>
                    <form id="account" method="post">
                        <h4 style="color: #f51167;">Use a CompanyName account to log in.</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" style="border-radius: 40px;background: #f0f0f0;height: 44px;border:none;font-size: 16px;" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" style="border-radius: 40px;background: #f0f0f0;height: 44px;border:none;font-size: 16px;" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="contact-social" style="margin-bottom: 11px;padding-top: 3px;">
                            <a href="#"><i class="fa fa-pinterest"></i></a>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-dribbble"></i></a>
                            <a href="#"><i class="fa fa-behance"></i></a>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary pl-5 pr-5" style="background-color: #E91E63; border-color: #E91E63;" >Log in</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                            @*<p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>*@
                        </div>
                    </form>
                </section>
            </div>
            <div class="col-md-6 col-md-offset-2">
                <section>
                    <h4 style="color: #f51167;">Use another service to log in.</h4>
                    <hr />
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                   Relatime Styler Still not support login using the external partners. But stay tune we will be ease your life shortly
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in Model.ExternalLogins)
                                        {
                                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                </section>
            </div>
        </div>

</div>
 </section>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
